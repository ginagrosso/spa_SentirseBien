datasource db {
  provider = "postgresql" // o mysql, sqlite seg√∫n tu base de datos
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  password String
  nombre   String?
  telefono String?
}

model reserva {
  id        Int      @id @default(autoincrement())
  nombre    String
  email     String
  servicio  String
  fecha     String
  horario   String
  createdAt DateTime @default(now())
}
