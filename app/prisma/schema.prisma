datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  output   = "node_modules/@prisma/client"
}

model User {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  email    String  @unique
  password String
  nombre   String?
  telefono String?
}

model reserva {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  nombre    String
  email     String
  servicio  String
  fecha     String
  horario   String
  createdAt DateTime @default(now())
}
